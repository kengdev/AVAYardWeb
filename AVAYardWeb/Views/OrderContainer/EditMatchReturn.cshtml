@model AVAYardWeb.Models.Entities.OrderContainer
@{
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}
@section Styles {
    <style>
        .release-container {
            display: none;
        }

        .mt-radio-inline {
            padding-bottom: 0px !important;
        }
    </style>
}

<div class="col-md-12 col-lg-12">
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                <i class="fad fa-pencil"></i>
                <span class="caption-subject bold uppercase font-md"> แก้ไขรายการคืนตู้สินค้า (Return)</span>
            </div>
        </div>

        <div class="portlet-body form">
            <div class="scroller" style="height:550px" data-always-visible="0" data-rail-visible="1" data-rail-color="blue" data-handle-color="red">
                @using (Html.BeginForm("EditMatchData", "OrderContainer", FormMethod.Post, new { id = "frmEditMatchReturn", onsubmit = "return OnValidate()" }))
                {
                    @Html.HiddenFor(m => m.OrderCode)
                    @Html.HiddenFor(m => m.IssueType)
                    @Html.HiddenFor(m => m.ContainerStatus)
                    @Html.HiddenFor(m => m.BookingNo)
                    @Html.HiddenFor(m => m.SealNo)
                    @Html.HiddenFor(m => m.IssueDate)
                    @Html.HiddenFor(m => m.IsApprove)
                    @Html.HiddenFor(m => m.IsReceipt)
                    @Html.HiddenFor(m => m.IsEnabled)
                    @Html.HiddenFor(m => m.CreateDate)
                    @Html.HiddenFor(m => m.CreateBy)
                    <div class="form-body">
                        <div class="row">
                            <div class="col-sm-12 col-md-3 col-lg-3">
                                <div class="form-group exchange-stage">
                                    <label>
                                        รูปแบบการรับ/คืน
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="mt-radio-inline">
                                        @if (Model.IsExchange)
                                        {
                                            <label class="mt-radio">
                                                <input type="radio" name="IsExchange" class="exchangeType" id="rdoNormal" value="FALSE"> Normal
                                                <span></span>
                                            </label>
                                            <label class="mt-radio">
                                                <input type="radio" name="IsExchange" class="exchangeType" id="rdoExchange" value="TRUE" checked> Exchange
                                                <span></span>
                                            </label>
                                        }
                                        else
                                        {
                                            <label class="mt-radio">
                                                <input type="radio" name="IsExchange" class="exchangeType" id="rdoNormal" value="FALSE" checked> Normal
                                                <span></span>
                                            </label>
                                            <label class="mt-radio">
                                                <input type="radio" name="IsExchange" class="exchangeType" id="rdoExchange" value="TRUE"> Exchange
                                                <span></span>
                                            </label>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4 col-lg-4">
                                @if (Model.IsExchange)
                                {
                                    <div class="form-group payment-stage">
                                        <label>
                                            ประเภทการชำระเงิน
                                            <span class="required"> * </span>
                                        </label>
                                        @if (Model.PaymentStageCode == "A")
                                        {
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" name="PaymentStageCode" class="PaymentStage" id="payNow" value="A" checked> ชำระทันที
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" name="PaymentStageCode" class="PaymentStage" id="payLater" value="B"> ชำระ ณ เวลารับตู้
                                                    <span></span>
                                                </label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mt-radio-inline">
                                                <label class="mt-radio">
                                                    <input type="radio" name="PaymentStageCode" class="PaymentStage" id="payNow" value="A"> ชำระทันที
                                                    <span></span>
                                                </label>
                                                <label class="mt-radio">
                                                    <input type="radio" name="PaymentStageCode" class="PaymentStage" id="payLater" value="B" checked> ชำระ ณ เวลารับตู้
                                                    <span></span>
                                                </label>
                                            </div>
                                        }
                                        <span class="help-block"></span>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group payment-stage" style="display:none;">
                                        <label>
                                            ประเภทการชำระเงิน
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="mt-radio-inline">
                                            <label class="mt-radio">
                                                <input type="radio" name="PaymentStageCode" class="PaymentStage" id="payNow" value="A" checked> ชำระทันที
                                                <span></span>
                                            </label>
                                            <label class="mt-radio">
                                                <input type="radio" name="PaymentStageCode" class="PaymentStage" id="payLater" value="B"> ชำระ ณ เวลารับตู้
                                                <span></span>
                                            </label>
                                        </div>
                                        <span class="help-block"></span>
                                    </div>
                                }
                            </div>
                        </div>

                        <div id="form-return">
                            <div class="row optional">
                                <div class="col-sm-4 col-md-4 col-lg-4">
                                    <div class="form-group">
                                        <label>
                                            Detention date
                                            <span class="required"> * </span>
                                        </label>
                                        @Html.TextBox("DetentionDate", Model.OrderContainerMatchdetail.DetentionDate, "{0:yyyy-MM-dd}", new { @Class = "form-control datepicker input-sm", Autocomplete = "Off" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>

                                <div class="col-sm-4 col-md-4 col-lg-4">
                                    <div class="form-group">
                                        <label>
                                            Container No.
                                            <span class="required"> * </span>
                                        </label>
                                        @Html.TextBoxFor(m => m.ContainerNo, new { @Class = "form-control form-eng input-sm ContainerNo", Autocomplete = "Off" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>

                                <div class="col-sm-4 col-md-4 col-lg-4">
                                    <div class="form-group">
                                        <label>
                                            ขนาดตู้สินค้า
                                            <span class="required"> * </span>
                                        </label>
                                        @Html.DropDownList("ContainerSizeCode", null, new { @Class = "form-control input-sm" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>

                                <div class="col-sm-4 col-md-4 col-lg-4">
                                    <div class="form-group">
                                        <label>
                                            ทะเบียนรถ
                                            <span class="required"> * </span>
                                        </label>
                                        @Html.TextBoxFor(m => m.TruckLicense, new { @Class = "form-control input-sm", Autocomplete = "Off" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4 col-md-4 col-lg-4">
                                    <div class="form-group">
                                        <label>
                                            บริษัทขนส่ง
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="input-group  input-group-sm">
                                            @Html.TextBoxFor(m => m.TransportationCode, new { @Class = "form-control", Autocomplete = "Off" })

                                            <span class="input-group-btn">
                                                <button class="btn red" type="button" onclick="searchTransportation()">ค้นหา</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-8">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        @Html.TextBox("txtTransportationName", Model.TransportationCodeNavigation.TransportationName, new { @Class = "form-control input-sm", Readonly = "Readonly" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row optional">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Agent
                                            <span class="required"> * </span>
                                        </label>
                                        @Html.DropDownList("AgentCode", null, new { @Class = "form-control input-sm" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Tare Weight
                                        </label>
                                        @Html.TextBoxFor(m => m.TareWeight, new { @Class = "form-control input-sm" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            หมายเหตุ
                                        </label>
                                        @Html.TextBoxFor(m => m.Remark, new { @Class = "form-control input-sm" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="row pull-right">
                            <div class="col-md-12">
                                <div class="tools-action">
                                    <a href="javascript:;" onclick="window.close()">ปิด</a> |
                                    <button type="submit" class="btn green">บันทึกข้อมูล</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/js/autocomplete/bootstrap3-typeahead.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        (function($) {
            $("#frmEditMatchReturn").ajaxForm(function(data) {
                killOverlayForm();
                if (data.result == true) {
                    $.alert.open('info', data.resultMessage, function(r) {
                        window.opener.reloadRow();
                        window.close();
                    });
                } else {
                    $.alert.open('error', data.resultMessage);
                }
            });

            $('#TransportationCode').typeahead({
                minLength: 1,
                source: function (query, process) {
                    var list = [];
                    map = {};
                    return $.post('/AutoComplete/Transportation', {
                        term: query
                    }, function (data) {
                        $.each(data, function (i, item) {
                            map[item.title] = item;
                            list.push(item.title);
                        });
                        process(list);
                    });
                },
                updater: function (item) {
                    var code = map[item].code;
                    var name = map[item].name;

                    $('#txtTransportationName').val(name);
                    return code;
                }
            });

            $('.exchangeType').change(function(){
                var exchangeVal = $('.exchangeType:checked').val();

                if(exchangeVal == "TRUE"){
                    $('.payment-stage').show();
                    $('#payNow').prop('checked', false);
                    $('#payLater').prop('checked', false);

                }
                else{
                    $('.payment-stage').hide();
                    $('#payNow').prop('checked', true);
                    $('#payLater').prop('checked', false);
                }
            });
        }(jQuery));

        function OnValidate() {
            var g1 = $('input[name="IsExchange"]:checked').val();

            var rules = {
                rules: {
                    "ContainerNo": {
                        require: { type: "", message: "กรุณาพิมพ์หรือเลือกเบอร์ตู้สินค้า" }
                    },
                    "ContainerSizeCode": {
                        require: { type: "", message: "กรุณาพิมพ์หรือเลือกเบอร์ตู้สินค้า" }
                    },
                    "TruckLicense": {
                        require: { type: "", message: "กรุณาพิมพ์ทะเบียนรถ" }
                    },
                    "TransportationCode": {
                        require: { type: "", message: "กรุณาพิมพ์หรือเลือกบริษัทขนส่ง" }
                    },
                    "IsExchange": {
                        radio: { type: "group", message: "กรุณาเลือกรูปแบบการรับตู้" }
                    },
                    "DetentionDate": {
                        require: { type: "", message: "กรุณาเลือก Detention date" }
                    },
                    "AgentCode": {
                        selected: { type: "", message: "กรุณาเลือก Agent" }
                    },
                    "TareWeight": {
                        require: { type: "", message: "กรุณาพิมพ์ Tare Weight" }
                    }
                }
            };

            if (g1 == "TRUE") {
                rules.rules["payNow"] = {
                    radio: { type: "group", message: "กรุณาเลือกประเภทการชำระเงิน" }
                };
            }

            var ok = $("#frmEditMatchReturn").validate(rules);

            if (ok) {
                overLayForm();
                return true;
            }
            return false;
        }

        function searchTransportation(){
            var url = '/search/transportation';
            var setting = 'width=800,height=550';
            window.open(url, 'search', setting);
        }


        function setTransportationBox(code) {
            $.post("/OrderContainer/GetTransportationByCode", {
                code: code
            }, function (data) {
                $('#TransportationCode').val(data.transportationCode);
                $('#txtTransportationName').val(data.transportationName);
            });
        }
    </script>
}