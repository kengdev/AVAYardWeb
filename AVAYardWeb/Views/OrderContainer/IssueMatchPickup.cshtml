@model AVAYardWeb.Models.Entities.OrderContainer
@{
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}
@section Styles {
    <style>
        .release-container {
            display: none;
        }

        .mt-radio-inline {
            padding-bottom: 0px !important;
        }
    </style>
}

<div class="col-md-12 col-lg-12">
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet box red">
        <div class="portlet-title">
            <div class="caption">
                <i class="fad fa-plus-circle"></i>
                <span class="caption-subject bold uppercase font-md"> ทำรายการรับตู้สินค้า (Pickup)</span>
            </div>
        </div>

        <div class="portlet-body form">
            <div class="scroller" style="height:505px" data-always-visible="0" data-rail-visible="1" data-rail-color="blue" data-handle-color="red">
                @using (Html.BeginForm("AddMatchData", "OrderContainer", FormMethod.Post, new { id = "frmMatchPickup", onsubmit = "return OnValidate()" }))
            {
                @Html.Hidden("MatchType", "PICKUP")
                <div class="form-body">
                    <div id="form-pickup">
                        <div class="row optional">
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>
                                        Container No.
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="input-group input-group-sm">
                                        <input type="text" id="pickup-container" name="ContainerNo" class="form-control ContainerNo" autocomplete="off">
                                        <span class="input-group-btn">
                                            <button class="btn red" type="button" onclick="searchContainer()">ค้นหา</button>
                                        </span>
                                    </div>
                                    <span class="help-block"></span>
                                </div>
                            </div>
                            <div class="col-xs-2">
                                <div class="form-group form-md-line-input">
                                    <input data-val="true" id="TareWeight" name="TareWeight" type="hidden" value="" />
                                    <input data-val="true" id="ContainerSizeCode" name="ContainerSizeCode" type="hidden" value="" />
                                    @Html.TextBox("ContainerSize", null, new { @Class = "form-control", @Readonly = "readonly" })
                                    <label for="form_control_1">Container Size</label>
                                    <span class="help-block">Some help goes here...</span>
                                </div>
                            </div>
                            
                            <div class="col-xs-6">
                                <div class="form-group form-md-line-input">
                                    <input data-val="true" id="AgentCode" name="AgentCode" type="hidden" value="" />
                                    @Html.TextBox("Agent", null, new { @Class = "form-control", @Readonly = "readonly" })
                                    <label for="form_control_1">Agent</label>
                                    <span class="help-block">Some help goes here...</span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label>
                                        รูปแบบการรับตู้
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="mt-radio-inline">
                                        <label class="mt-radio">
                                            <input type="radio" name="IsExchange" class="exchangeType" id="rdoNormal" value="FALSE"> Normal
                                            <span></span>
                                        </label>
                                        <label class="mt-radio">
                                            <input type="radio" name="IsExchange" class="exchangeType" id="rdoExchange" value="TRUE"> Exchange
                                            <span></span>
                                        </label>
                                    </div>
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="col-xs-4" id="payment-section" style="display:None">
                                <div class="form-group form-md-line-input">
                                    <input data-val="true" id="TareWeight" name="TareWeight" type="hidden" value="" />
                                    @Html.TextBox("IsPaid", null, new { @Class = "form-control", @Readonly = "readonly" })
                                    <label for="form_control_1">การชำระเงิน</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        Booking
                                        <span class="required"> * </span>
                                    </label>
                                    @Html.TextBoxFor(m => m.BookingNo, new { @Class = "form-control input-sm", Autocomplete = "Off" })
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        เลขซีล
                                        <span class="required"> * </span>
                                    </label>
                                    @Html.TextBoxFor(m => m.SealNo, new { @Class = "form-control input-sm", Autocomplete = "Off" })
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>
                                        ทะเบียนรถ
                                        <span class="required"> * </span>
                                    </label>
                                    @Html.TextBoxFor(m => m.TruckLicense, new { @Class = "form-control input-sm", Id = "pickup-license", Autocomplete = "Off" })
                                    <span class="help-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>
                                        บริษัทขนส่ง
                                        <span class="required"> * </span>
                                    </label>
                                    <div class="input-group input-group-sm">
                                        @Html.TextBoxFor(m => m.TransportationCode, new { @Class = "form-control", Autocomplete = "Off" })

                                        <span class="input-group-btn">
                                            <button class="btn red" type="button" onclick="searchTransportation()">ค้นหา</button>
                                        </span>
                                    </div>
                                    <span class="help-block"></span>
                                </div>
                            </div>
                            <div class="col-xs-8">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    @Html.TextBox("txtTransportationName", null, new { @Class = "form-control input-sm", Readonly = "Readonly" })
                                    <span class="help-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>
                                        หมายเหตุ
                                    </label>
                                    @Html.TextBoxFor(m => m.Remark, new { @Class = "form-control" })
                                    <span class="help-block"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="row pull-right">
                        <div class="col-md-12">
                            <div class="tools-action">
                                <a href="javascript:;" onclick="window.close()">ปิด</a> |
                                <button type="submit" class="btn green">บันทึกข้อมูล</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
            </div>
    </div>
</div>

@section scripts
{
    <script src="~/js/autocomplete/bootstrap3-typeahead.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        (function($) {
            $("#frmMatchPickup").ajaxForm(function(data) {
                killOverlayForm();
                if (data.result == true) {
                    $.alert.open('info', data.resultMessage, function(r) {
                        window.opener.reloadRow();
                        window.close();
                    });
                } else {
                    $.alert.open('error', data.resultMessage);
                }
            });

            $('.matchType').change(function(){
                var val = $('.matchType:checked').val();

                if(val == "RETURN"){
                    $('.payment-stage').show();
                    $('.exchange-stage').show();
                    $('#payNow').prop('checked', false);
                    $('#payNow').prop('checked', false);

                    setReturn();
                }
                else{
                    $('.exchange-stage').hide();
                    $('.payment-stage').hide();
                    $('#payNow').prop('checked', true);
                    $('#payLater').prop('checked', false);

                    setPickup();
                }
            });

            $('.exchangeType').change(function(){
                var exchangeVal = $('.exchangeType:checked').val();
                var matchVal =  $('.matchType:checked').val();

                if(exchangeVal == "TRUE"){
                    $('#payNow').prop('checked', false);
                    $('#payLater').prop('checked', false);
                    if(matchVal == "RETURN")
                    {
                        $('.payment-stage').show();
                    }
                    else{
                        $('.payment-stage').hide();
                    }
                }
                else{
                    $('.payment-stage').hide();
                    $('#payNow').prop('checked', true);
                    $('#payLater').prop('checked', false);
                }
            });

            $('#TransportationCode').typeahead({
                minLength: 1,
                source: function (query, process) {
                    var list = [];
                    map = {};
                    return $.post('/AutoComplete/Transportation', {
                        term: query
                    }, function (data) {
                        $.each(data, function (i, item) {
                            map[item.title] = item;
                            list.push(item.title);
                        });
                        process(list);
                    });
                },
                updater: function (item) {
                    var code = map[item].code;
                    var name = map[item].name;

                    $('.txtTransportationName').val(name);
                    return code;
                }
            });

            $('#pickup-container').typeahead({
                minLength: 1,
                source: function (query, process) {
                    var list = [];
                    map = {};
                    return $.post('/AutoComplete/ContainerInYard', {
                        term: query
                    }, function (data) {
                        $.each(data, function (i, item) {
                            map[item.title] = item;
                            list.push(item.title);
                        });
                        process(list);
                    });
                },
                updater: function (item) {
                    var code = map[item].code;
                    var name = map[item].name;
                    var size = map[item].attr1;
                    var agent = map[item].attr2;

                    setContainerBox(code);
                    return name;
                }
            });
        }(jQuery));

        function OnValidate() {
            var validateRules = {
                rules: {
                    "pickup-container": {
                        require: { type: "", message: "กรุณาพิมพ์หรือเลือกเบอร์ตู้สินค้า" }
                    },
                    "BookingNo": {
                        require: { type: "", message: "กรุณาพิมพ์ Booking" }
                    },
                    "SealNo": {
                        require: { type: "", message: "กรุณาพิมพ์เลขซีล" }
                    },
                    "TruckLicense": {
                        require: { type: "", message: "กรุณาพิมพ์ทะเบียนรถ" }
                    },
                    "TransportationCode": {
                        require: { type: "", message: "กรุณาพิมพ์หรือเลือกบริษัทขนส่ง" }
                    },
                    "IsExchange": {
                        radio: { type: "group", message: "กรุณาเลือกรูปแบบการรับตู้" }
                    }
                }
            };

            var ok = $("#frmMatchPickup").validate(validateRules);

            if (ok) {
                overLayForm();
                return true;
            }
            return false;
        }

        function searchContainer(){
            var url = '/search/matchcontainer';
            var setting = 'width=800,height=550';
            window.open(url, 'search', setting);
        }

        function searchTransportation(){
            var url = '/search/transportation';
            var setting = 'width=800,height=550';
            window.open(url, 'search', setting);
        }

        function setContainerBox(code) {
            $.post("/OrderContainer/GetMatchContainer", {
                order_code: code
            }, function (data) {
                $('#pickup-container').val(data.container_no);
                $('#ContainerSizeCode').val(data.container_size_code);
                $('#ContainerSize').val(data.container_size_name);
                $('#TareWeight').val(data.tareweight);
                $('#AgentCode').val(data.agent_code);
                $('#Agent').val(data.agent_name);

                if(data.is_exchange)
                {
                    $('#rdoExchange').prop('checked', true);
                    $('#rdoNormal').prop('checked', false);

                    if(data.is_paid){
                        $('#IsPaid').val('ชำระแล้ว');
                        $('#IsPaid').addClass('font-green-jungle');
                    }
                    else{

                        $('#IsPaid').val('ยังไม่ชำระ');
                        $('#IsPaid').addClass('font-red');
                    }
                    $('#payment-section').show();
                }
                else{
                    $('#rdoExchange').prop('checked', false);
                    $('#rdoNormal').prop('checked', true);
                    $('#payment-section').hide();
                }
            });
        }

        function setTransportationBox(code) {
            $.post("/OrderContainer/GetTransportationByCode", {
                code: code
            }, function (data) {
                $('#TransportationCode').val(data.transportationCode);
                $('#txtTransportationName').val(data.transportationName);
            });
        }
    </script>
}