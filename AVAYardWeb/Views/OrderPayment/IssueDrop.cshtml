@model AVAYardWeb.Models.Entities.OrderPayment
@{
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<div class="col-md-12 col-lg-12">
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="fad fa-plus-circle"></i>
                <span class="caption-subject bold uppercase"> ทำรายการใบเสร็จรับเงิน (Container Handling)</span>
            </div>
        </div>
        @using (Html.BeginForm("AddData", "OrderPayment", FormMethod.Post, new { id = "frmAdd", onsubmit = "return OnValidate()" }))
        {
            @Html.HiddenFor(m => m.IssueType)
            @Html.HiddenFor(m => m.OrderCode)
            @Html.HiddenFor(m => m.ContainerNo)
            @Html.HiddenFor(m => m.ContainerSizeCode)
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="font-sm">
                                            เบอร์ตู้
                                        </label>
                                        <div class="input-group input-group-sm">
                                            @Model.ContainerNo
                                        </div>
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="font-sm">
                                            วันที่รับฝาก
                                        </label>
                                        <div class="input-group input-group-sm">
                                            @Model.OrderCodeNavigation.IssueDate.ToString("dd-MM-yyyy")
                                        </div>
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="font-sm">การออกใบกำกับภาษี</label>
                                        <div class="mt-radio-inline">
                                            <label class="mt-radio">
                                                <input type="radio" name="IsTaxInvoice" id="rdoNoneTax" value="FALSE" checked> แยกใบกำกับภาษี
                                                <span></span>
                                            </label>

                                            <label class="mt-radio">
                                                <input type="radio" name="IsTaxInvoice" id="rdoTax" value="TRUE"> ไม่แยกใบกำกับภาษี
                                                <span></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="font-sm">
                                            เลขประจำตัวผู้เสียภาษี
                                            <span class="required"> * </span>
                                        </label>
                                        @Html.TextBox("TaxId", null, new { @Class = "form-control input-sm", Autocomplete = "Off" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="font-sm">ชื่อ</label>
                                        @Html.TextBox("TaxName", null, new { @Class = "form-control input-sm", Readonly = "readonly" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label class="font-sm">
                                            ที่อยู่
                                        </label>
                                        @Html.TextArea("TaxAddress", null, new { @Class = "form-control input-sm", Readonly = "readonly" })
                                        <span class="help-block"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-7">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="font-sm">วิธีการชำระเงิน</label>
                                        <div class="mt-radio-list">
                                            <label class="mt-radio mt-radio-outline">
                                                เงินสด
                                                <input type="radio" value="01" name="payment_type" />
                                                <span></span>
                                            </label>
                                            <label class="mt-radio mt-radio-outline">
                                                โอนเข้าบัญชีธนาคาร
                                                <input type="radio" value="02" name="payment_type" checked />
                                                <span></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <table class="table table-bordered" id="drop-table">
                                <thead>
                                    <tr>
                                        <th>รายการ</th>
                                        <th>ขนาด</th>
                                        <th>ฝากเกิน</th>
                                        <th>จำนวนเงิน (บาท)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            ค่าบริการฝากตู้ <span class="container-no"></span>
                                        </td>
                                        <td rowspan="3" style="vertical-align:middle;text-align:center;">
                                            <span class="container-size">
                                                @Model.ContainerSizeCodeNavigation.ContainerSizeName
                                            </span>
                                        </td>
                                        <td style="width:100px;text-align:center">
                                            <span id="over_stay"></span>
                                        </td>
                                        <td style="width:130px;">
                                            @Html.Hidden("StayDays", Model.OrderPaymentDetail.StayDays)
                                            @Html.TextBox("ServiceCharge", Model.Total, new { @Class = "form-control input-sm", autocomplete = "Off" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>ค่าบริการฝากตู้เกิน 7 วัน วันละ 50 บาท</td>
                                        <td style="width:90px;text-align:center">
                                            @Html.Hidden("Overstay7Days", Model.OrderPaymentDetail.Overstay7Days)
                                            @if (Model.OrderPaymentDetail.Overstay7Days > 0)
                                            {
                                                <span>
                                                    @Model.OrderPaymentDetail.Overstay7Days วัน
                                                </span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td>
                                            @Html.TextBox("Cost7Days", Model.OrderPaymentDetail.Cost7Days, new { @Class = "form-control input-sm", autocomplete = "Off" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>ค่าบริการฝากตู้เกิน 10 วัน วันละ 100 บาท</td>
                                        <td style="width:90px;text-align:center">
                                            @Html.Hidden("Overstay10Days", Model.OrderPaymentDetail.Overstay10Days)
                                            @if (Model.OrderPaymentDetail.Overstay10Days > 0)
                                            {
                                                <span>
                                                    @Model.OrderPaymentDetail.Overstay10Days วัน
                                                </span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td>

                                            @Html.TextBox("Cost10Days", Model.OrderPaymentDetail.Cost10Days, new { @Class = "form-control input-sm", autocomplete = "Off" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="form-group">
                                <label>
                                    หมายเหตุ
                                </label>
                                @Html.TextBox("remark", null, new { @Class = "form-control" })
                                <span class="help-block"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="row pull-right">
                        <div class="col-md-12">
                            <div class="tools-action">
                                <a href="javascript:;" onclick="window.close()">ปิด</a> |
                                <button type="submit" class="btn green">บันทึกข้อมูล</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts
{
    <script src="~/js/autocomplete/bootstrap3-typeahead.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        (function($) {
            var d = new Date();
            var currDate = d.getDate();
            var currMonth = new Intl.DateTimeFormat('en', { month: '2-digit' }).format(d);
            var currYear = d.getFullYear();
            var startDate = currYear + '-' + currMonth + '-' + currDate;

            $('#TaxId').typeahead({
                minLength: 1,
                source: function (query, process) {
                    var list = [];
                    map = {};
                    return $.post('/AutoComplete/TaxAddress', {
                        term: query
                    }, function (data) {
                        $.each(data, function (i, item) {
                            map[item.title] = item;
                            list.push(item.title);
                        });
                        process(list);
                    });
                },
                updater: function (item) {
                    var code = map[item].code;
                    var name = map[item].name;
                    var branchType = map[item].attr1;
                    var branchName = map[item].attr2;
                    var address = map[item].address;

                    if(branchType != '01'){
                        branchName = 'สาขา' + branchName;
                    }
                    else{
                        branchName = 'สำนักงานใหญ่';
                    }

                    $('#TaxName').val(name + ' (' + branchName + ')');
                    $('#TaxAddress').val(address);
                    return code;
                }
            });

            $("#frmAdd").ajaxForm(function(data) {
                killOverlayForm();
                if (data.result == true) {
                    $.alert.open('info', data.resultMessage, function(r) {
                        //fetch("http://localhost:9001/show?code=" + code).catch(()=>{});

                        var url = '/orderpayment/displaypayment/' + data.code;
                        window.location.href = url;
                    });
                } else {
                    $.alert.open('error', data.resultMessage);
                }
            });
        }(jQuery));

        function OnValidate() {
            var validateRules = {
                rules: {
                    TaxId: {
                      require: { type: "", message: "กรุณาพิมพ์เลขประจำตัวผู้เสียภาษี" }
                    }
                }
            };

            var ok = $("#frmAdd").validate(validateRules);

            if (ok) {
                overLayForm();
                return true;
            }
            return false;
        }

        function setPayment(code){
            //fetch("http://localhost:9001/show?code=" + code).catch(()=>{});

            var url = '/orderpayment/displaypayment/' + code;
            var setting = 'width=800,height=550';

            window.open(url, 'display payment', setting);
        }
    </script>
}
